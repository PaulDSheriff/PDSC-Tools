@model PDSC.Common.ViewModelLayer.USStateCodeViewModel

<form method="post" asp-action="USStateCodeIndex">  
  <input type="hidden" asp-for="SelectedEntity.IsAdding" />

  <partial name="_ValidationPartial" />

  <div class="form-group">
    <label asp-for="SelectedEntity.StateCode" class="control-label"></label>
    <input asp-for="SelectedEntity.StateCode" class="form-control" />
    <span asp-validation-for="SelectedEntity.StateCode" class="text-danger" />
  </div>
  <div class="form-group">
    <label asp-for="SelectedEntity.StateName" class="control-label"></label>
