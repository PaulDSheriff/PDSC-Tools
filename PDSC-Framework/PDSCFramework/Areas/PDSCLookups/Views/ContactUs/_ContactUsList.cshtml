@using PDSC.Common.EntityLayer
@model PDSC.Common.ViewModelLayer.ContactUsViewModel

@if (Model.DataCollection == null || Model.DataCollection.Count == 0) {
  <p>Enter search parameters, then click Search button</p>
}
else {
  <form method="get" asp-action="SortPage">
    <partial name="_SortPageHiddenFields" />

    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th>Actions</th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('FirstName');">
              First Name
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('LastName');">
              Last Name
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('EmailAddress');">
              Email Address
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('Phone');">
              Phone
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('ContactText');">
              Contact Text
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('IPAddress');">
              IP Address
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('RespondedByName');">
              Responded By Name
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('RespondedDate');">
              Responded Date
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('IsActive');">
              Is Active
            </a>
          </th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        @foreach (ContactUs item in Model.DataCollection) {
        <tr>
          <td>
            <a asp-action="Edit"
               asp-route-id="@item.ContactUsId"
               class="btn btn-primary">
              Edit
            </a>
          </td>
          <td>@Html.DisplayFor(m => item.FirstName)</td>
          <td>@Html.DisplayFor(m => item.LastName)</td>
          <td>@Html.DisplayFor(m => item.EmailAddress)</td>
          <td>@Html.DisplayFor(m => item.Phone)</td>
          <td>@Html.DisplayFor(m => item.ContactText)</td>
          <td>@Html.DisplayFor(m => item.IPAddress)</td>
          <td>@Html.DisplayFor(m => item.RespondedByName)</td>
          <td>@Html.DisplayFor(m => item.RespondedDate)</td>
          <td>@Html.DisplayFor(m => item.IsActive)</td>
          <td>
            @Html.ActionLink("Delete", "Delete",
                new { id = item.ContactUsId },
                new
                  {
                    onclick = "return confirm('Delete this Contact Us?');",
                    @class = "btn btn-danger"
                  })
          </td>
        </tr>
        }
      </tbody>
    </table>
    <partial name="_PagerPartial" />
  </form>
}
