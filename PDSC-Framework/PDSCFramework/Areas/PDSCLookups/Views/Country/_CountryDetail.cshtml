@model PDSC.Common.ViewModelLayer.CountryViewModel

<form method="post" asp-action="CountryIndex">  
  <input type="hidden" asp-for="SelectedEntity.IsAdding" />

  <partial name="_ValidationPartial" />

  <div class="form-group">
    <label asp-for="SelectedEntity.CountryCode" class="control-label"></label>
    <input asp-for="SelectedEntity.CountryCode" class="form-control" />
    <span asp-validation-for="SelectedEntity.CountryCode" class="text-danger" />
  </div>
  <div class="form-group">
    <label asp-for="SelectedEntity.CountryName" class="control-label"></label>
    <input asp-for="SelectedEntity.CountryName" class="form-control" />
    <span asp-validation-for="SelectedEntity.CountryName" class="text-danger" />
  </div>

  <div class="form-group">
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" formnovalidate="formnovalidate" asp-action="CountryIndex">
      Cancel
    </a>
  </div>
</form>
