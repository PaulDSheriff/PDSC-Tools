@using PDSC.Common.EntityLayer
@model PDSC.Common.ViewModelLayer.CountryViewModel

@if (Model.DataCollection == null || Model.DataCollection.Count == 0) {
  <p>Enter search parameters, then click Search button</p>
}
else {
  <form method="get" asp-action="SortPage">
    <partial name="_SortPageHiddenFields" />

    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th>Actions</th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('CountryCode');">
              Country Code
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('CountryName');">
              Country Name
            </a>
          </th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        @foreach (Country item in Model.DataCollection) {
        <tr>
          <td>
            <a asp-action="Edit"
               asp-route-id="@item.CountryCode"
               class="btn btn-primary">
              Edit
            </a>
          </td>
          <td>@Html.DisplayFor(m => item.CountryCode)</td>
          <td>@Html.DisplayFor(m => item.CountryName)</td>
          <td>
            @Html.ActionLink("Delete", "Delete",
                new { id = item.CountryCode },
                new
                  {
                    onclick = "return confirm('Delete this Country?');",
                    @class = "btn btn-danger"
                  })
          </td>
        </tr>
        }
      </tbody>
    </table>
    <partial name="_PagerPartial" />
  </form>
}
