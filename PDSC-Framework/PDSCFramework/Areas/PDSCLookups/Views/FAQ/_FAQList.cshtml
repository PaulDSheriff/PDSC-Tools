@using PDSC.Common.EntityLayer
@model PDSC.Common.ViewModelLayer.FAQViewModel

@if (Model.DataCollection == null || Model.DataCollection.Count == 0) {
  <p>Enter search parameters, then click Search button</p>
}
else {
  <form method="get" asp-action="SortPage">
    <partial name="_SortPageHiddenFields" />

    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th>Actions</th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('FAQQuestion');">
              FAQ Question
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('FAQAnswer');">
              FAQ Answer
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('IsActive');">
              Is Active
            </a>
          </th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        @foreach (FAQ item in Model.DataCollection) {
        <tr>
          <td>
            <a asp-action="Edit"
               asp-route-id="@item.FAQId"
               class="btn btn-primary">
              Edit
            </a>
          </td>
          <td>@Html.DisplayFor(m => item.FAQQuestion)</td>
          <td>@Html.DisplayFor(m => item.FAQAnswer)</td>
          <td>@Html.DisplayFor(m => item.IsActive)</td>
          <td>
            @Html.ActionLink("Delete", "Delete",
                new { id = item.FAQId },
                new
                  {
                    onclick = "return confirm('Delete this Faq?');",
                    @class = "btn btn-danger"
                  })
          </td>
        </tr>
        }
      </tbody>
    </table>
    <partial name="_PagerPartial" />
  </form>
}
