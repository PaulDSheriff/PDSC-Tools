@model PDSC.Common.ViewModelLayer.FAQViewModel

<form method="post" asp-action="FAQIndex">  
  <input type="hidden" asp-for="SelectedEntity.FAQId" />

  <partial name="_ValidationPartial" />

  <div class="form-group">
    <label asp-for="SelectedEntity.FAQQuestion" class="control-label"></label>
    <input asp-for="SelectedEntity.FAQQuestion" class="form-control" />
    <span asp-validation-for="SelectedEntity.FAQQuestion" class="text-danger" />
  </div>
  <div class="form-group">
    <label asp-for="SelectedEntity.FAQAnswer" class="control-label"></label>
    <input asp-for="SelectedEntity.FAQAnswer" class="form-control" />
    <span asp-validation-for="SelectedEntity.FAQAnswer" class="text-danger" />
  </div>
  <div class="form-group">
    <label asp-for="SelectedEntity.IsActive" class="control-label"></label>
    <input asp-for="SelectedEntity.IsActive" class="form-control" />
    <span asp-validation-for="SelectedEntity.IsActive" class="text-danger" />
  </div>

  <div class="form-group">
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" formnovalidate="formnovalidate" asp-action="FAQIndex">
      Cancel
    </a>
  </div>
</form>
