@model PDSC.Common.ViewModelLayer.ContactUsViewModel

<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col">
        <h4 class="card-title">How can we help?</h4>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <div asp-validation-summary="All" class="text-danger">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>* = Required information</p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm">
        <label asp-for="SelectedEntity.FirstName" class="control-label"></label>
        <div class="input-group">
          <div class="input-group-prepend" title="Required Info">
            <span class="input-group-text">*</span>
          </div>
          <input asp-for="SelectedEntity.FirstName" class="form-control" />
        </div>
        <span asp-validation-for="SelectedEntity.FirstName" class="text-danger" />
      </div>
      <div class="form-group col-sm">
        <label asp-for="SelectedEntity.LastName" class="control-label"></label>
        <div class="input-group">
          <div class="input-group-prepend" title="Required Info">
            <span class="input-group-text">*</span>
          </div>
          <input asp-for="SelectedEntity.LastName" class="form-control" />
        </div>
        <span asp-validation-for="SelectedEntity.LastName" class="text-danger" />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm">
        <label asp-for="SelectedEntity.EmailAddress" class="control-label"></label>
        <div class="input-group">
          <div class="input-group-prepend" title="Required Info">
            <span class="input-group-text">*</span>
          </div>
          <input asp-for="SelectedEntity.EmailAddress" class="form-control" />
        </div>
        <span asp-validation-for="SelectedEntity.EmailAddress" class="text-danger" />
      </div>
      <div class="form-group col-sm">
        <label asp-for="SelectedEntity.Phone" class="control-label"></label>
        <input asp-for="SelectedEntity.Phone" placeholder="Optional" class="form-control" />
        <span asp-validation-for="SelectedEntity.Phone" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <label asp-for="SelectedEntity.ContactText" class="control-label">What can we help you with?</label>
      <div class="input-group">
        <div class="input-group-prepend" title="Required Info">
          <span class="input-group-text">*</span>
        </div>
        <textarea asp-for="SelectedEntity.ContactText" rows="6" class="form-control"></textarea>
      </div>
      <span asp-validation-for="SelectedEntity.ContactText" class="text-danger" />
    </div>
  </div>
  <div class="card-footer">
    <div class="form-group">
      <button class="btn btn-success">Submit</button>
      <button class="btn btn-primary" formnovalidate="formnovalidate" asp-action="Index" asp-controller="Home">
        Cancel
      </button>
    </div>
  </div>
</div>
