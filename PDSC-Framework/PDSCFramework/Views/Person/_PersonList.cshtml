@using PDSCFramework.EntityLayer
@model PDSCFramework.ViewModelLayer.PersonViewModel

@if (Model.DataCollection == null || Model.DataCollection.Count == 0) {
  <p>Enter search parameters, then click Search button</p>
}
else {
  <form method="get" asp-action="SortPage">
    <partial name="_SortPageHiddenFields" />

    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th>Actions</th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('FirstName');">
              First Name
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('LastName');">
              Last Name
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('EmailAddress');">
              Email Address
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('CellPhone');">
              Cell Phone
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('City');">
              City
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('StateCode');">
              State Code
            </a>
          </th>
          <th>
            <a href="#" onclick="pdscController.sortOnHeaderClick('IsActive');">
              Is Active
            </a>
          </th>          
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        @foreach (Person item in Model.DataCollection) {
        <tr>
          <td>
            <a asp-action="Edit"
               asp-route-id="@item.PersonId"
               class="btn btn-primary">
              Edit
            </a>
          </td>
          <td>@Html.DisplayFor(m => item.FirstName)</td>
          <td>@Html.DisplayFor(m => item.LastName)</td>
          <td>@Html.DisplayFor(m => item.EmailAddress)</td>
          <td>@Html.DisplayFor(m => item.CellPhone)</td>
          <td>@Html.DisplayFor(m => item.City)</td>
          <td>@Html.DisplayFor(m => item.StateCode)</td>
          <td>@Html.DisplayFor(m => item.IsActive)</td>
          <td>
            @Html.ActionLink("Delete", "Delete",
                new { id = item.PersonId },
                new
                  {
                    onclick = "return confirm('Delete this Person?');",
                    @class = "btn btn-danger"
                  })
          </td>
        </tr>
        }
      </tbody>
    </table>
    <partial name="_PagerPartial" />
  </form>
}
