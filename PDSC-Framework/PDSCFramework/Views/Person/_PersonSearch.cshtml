@model PDSCFramework.ViewModelLayer.PersonViewModel

<form method="get" asp-action="Search" data-waitmsg="Please wait while loading People...">
  <div class="card">
    <div class="card-header bg-primary text-light">
      <a id="searchHeader" class="d-block text-light" data-toggle="collapse" href="#searchBody" aria-expanded="true" aria-controls="searchBody">
        Search for Person @Model.SearchEntity.ToString()
      </a>
      <span>Filter Applied: @Model.SearchEntity.ToString()</span>
    </div>
    <div id="searchBody" class="collapse" aria-labelledby="searchHeader">
      <div class="card-body">
        <div class="form-group">
          <label asp-for="SearchEntity.FirstName" class="control-label"></label>
          <input asp-for="SearchEntity.FirstName" class="form-control" />
        </div>
        <div class="form-group">
          <label asp-for="SearchEntity.LastName" class="control-label"></label>
          <input asp-for="SearchEntity.LastName" class="form-control" />
        </div>
        <div class="form-group">
          <label asp-for="SearchEntity.EmailAddress" class="control-label"></label>
          <input asp-for="SearchEntity.EmailAddress" class="form-control" />
        </div>
      </div>
    </div>
    <div class="card-footer bg-primary text-light">
      <div class="row">
        <div class="col-8">
           <button formnovalidate="formnovalidate" class="btn btn-success">
            Search
          </button>
          <a class="btn btn-primary"
             data-waitmsg="Please wait while loading People..."
             onclick="return pdscController.pleaseWait(this);"
             asp-action="PersonIndex">
            Reset
          </a>
          <a class="ml-5 btn btn-info" asp-action="Add">
            Add
          </a>
        </div>
        <div class="col-4">
          <p class="text-right">
            Records Found: @String.Format("{0:n0}", Model.TotalRecords)
          </p>
        </div>
      </div>
    </div>
  </div>
</form>
